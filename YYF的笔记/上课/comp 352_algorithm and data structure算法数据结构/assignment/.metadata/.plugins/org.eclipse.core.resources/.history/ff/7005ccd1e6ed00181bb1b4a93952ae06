package assignment3mignong;

public class SortPriorityQueue {
	private Job[] a;
	private int last;
	private int priorityChanges;
	
	public SortPriorityQueue() {
		a= new Job[2];
		last =-1;
	}
	
	public int addToPQ(Job e, int entryTime) {
		//set entryTime when addToPQ
		if (e.isPure()) 
			e.setEntryTime(entryTime);				
		if (last== a.length-1) //array size is full
			resize(1);
		last++;		
		int i=0;
		while (i<last&&a[i]!=null && a[i].getFinalPriority()<=e.getFinalPriority()) {   //i最后会等于一个空的地方或者I的final小于e的final
			i++;
		}
		for (int j=last; j>i; j--) {
			a[j] = a[j-1];
		}
		a[i] = e;
		return i;
	}
	
	public Job removeMin() {
		if (last==-1) return null;		
		Job temp = a[0];
		last--;
		for (int i=0; i<=last; i++) {
			a[i] = a[i+1];
		}
		
		if (last+1== a.length/2) resize(-1);
		return temp;
	}
	
	public int size() {
		return last+1;
	}
	
	private void resize(int i) {
		Job temp[] = a;
		int len = a.length;
		if (i>0) {
			a = new Job[(len+len)];
		}
		else {
			len =len/2;
			if (len<2) {
				a = new Job[2];
			}
			else{
				a = new Job[len];
			}
			
		}
		for (int j=0; j<=last;j++) {
			a[j] = temp[j];
		}
		 return;
		
	}

	public void moveStarved() {
		int oldestTime = Integer.MAX_VALUE;
		int indexOfOldest = 0;
		int i=last-1; 
		while(i>=0 ) {
			if (a[i].isPure() && a[i].getEntryTime()<oldestTime ) {
				oldestTime = a[i].getEntryTime();
				indexOfOldest = i;
			}
			i--;
		}
		// there is a pure index set priority to 1
		if (indexOfOldest>=0) {
			a[indexOfOldest].setFinalPriority(1);
			this.priorityChanges++;
		}
		return ;
	}
	
	public int getPriorityChanges() {
		return priorityChanges;
	}

	public String toString() {
		String s = "";
		
		for (int i=0; i<=last; i++) {
			s+= a[i]+ " |\n";
		}
		return s;
	}
}